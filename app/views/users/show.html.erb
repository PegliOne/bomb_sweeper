<h2>Hi <%= @user.username %>!</h2>

<h3>Details</h3>

<section class="d-flex justify-content-around w-50 mb-5">
  <div class="d-flex flex-column">
    <p><span>Email:</span> <%= @user.email %></p>
    <p><span>Win Percentage:</span> <%= @win_percentage %>%</p>
  </div>  
  <div class="d-flex flex-column">
    <p><span>Joined:</span> <%= convert_time_to_date(@user.created_at) %></p>
    <p><span>Quickest Time:</span> <%= @quickest_winning_play_time %> seconds (<%= @quickest_winning_play_difficulty %>)</p>
  </div>
</section>

<p>You have won the following games.</p>

<%= render partial: "shared/score_tables", locals: {easy_plays: @easy_plays, medium_plays: @medium_plays, hard_plays: @hard_plays} %>

<%= render partial: "shared/home_link" %>