<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-dark d-flex justify-content-between p-0">
    <ul class="navbar-nav">
      <li class="nav-item d-flex align-items-center">
        <h1 class="navbar-brand d-flex px-3 mx-0 my-1 text-center">BombSweeper</h1>
      </li>
      <%= render partial: "shared/navbar/navbar_link", locals: { text: "The Game", paths: [ root_path, game_path("easy"), game_path("medium"), game_path("hard") ] } %>
      <%= render partial: "shared/navbar/navbar_link", locals: { text: "Scoreboard", paths: [ plays_path ] } %>
    </ul>
    <ul class="navbar-nav">
      <% if @current_user.present? %>
        <%= render partial: "shared/navbar/navbar_link", locals: { text: "View Profile", paths: [ user_path ] } %>
        <li class="nav-item d-flex align-items-center">
          <%= link_to "Log Out", log_out_path, data: { turbo_method: :delete }, class: "nav-link d-flex align-items-center px-3 text-center" %>
        </li>
      <% else %>
        <%= render partial: "shared/navbar/navbar_link", locals: { text: "Log In", paths: [ log_in_path ] } %>
        <%= render partial: "shared/navbar/navbar_link", locals: { text: "Sign Up", paths: [ sign_up_path ] } %>
      <% end %>  
    </ul>
  </nav>
</header>