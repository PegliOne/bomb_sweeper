<% unless plays.length == 0 %>
  <h3>Fastest <%= difficulty %> Times</h3>

  <table class="table mt-4 mb-5">
    <thead>
      <tr>
        <th class="px-4">Username</th>
        <th class="px-4">Time</th>
        <th class="px-4">Difficulty</th>
        <th class="px-4 text-nowrap">Achieved At</th>
      </tr>
    </thead>
    <tbody>
      <% plays.map do |play| %>
        <tr>
          <td class="px-4"><%= User.find(play.user_id).username %></td>
          <td class="px-4"><%= play.time_in_seconds %>s</td>
          <td class="px-4"><%= play.difficulty.capitalize %></td>
          <td class="px-4 text-nowrap"><%= convert_time(play.created_at) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>