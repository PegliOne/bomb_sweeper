<%= form_with model: model, url: path, class: "mt-4 mb-5" do |form| %>
  <p class="text-left text-danger fw-bold">Error: <%= error_message %></p>

  <% if type == "Sign Up" %>
    <%= render partial: "shared/forms/form_input", locals: { form: form, label: :username, type: "text", placeholder: "Enter a name here ...", required: false } %>
  <% end %>  
  <%= render partial: "shared/forms/form_input", locals: { form: form, label: :email, type: "email", placeholder: "Enter an email here ...", required: true } %>
  <%= render partial: "shared/forms/form_input", locals: { form: form, label: :password, type: "password", placeholder: "Enter a password here ...", required: true } %>
  <% if type == "Sign Up" %>
    <%= render partial: "shared/forms/form_input", locals: { form: form, label: :password_confirmation, type: "password", placeholder: "Enter password again ...", required: false } %>
  <% end %>  

  <div class="d-flex justify-content-center mt-5">
    <%= form.submit type, class: "btn btn-dark" %>
  </div>
<% end %>

<%= render partial: "shared/home_link" %>