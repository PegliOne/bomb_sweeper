<header>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark d-flex justify-content-between p-0">
    <ul class="navbar-nav">
      <li class="nav-item d-flex align-items-center">
        <h1 class="navbar-brand mx-3 my-0">BombSweeper</h1>
      </li>  
      <li class="nav-item d-flex align-items-center <%= current_page?(root_path) ? 'bg-secondary' : '' %>">
        <%= link_to "The Game", root_path, class: "nav-link #{current_page?(root_path) ? 'active' : '' }" %>
      </li>
      <li class="nav-item d-flex align-items-center <%= current_page?(plays_path) ? 'bg-secondary' : '' %>">
        <%= link_to 'Scoreboard', plays_path, class: "nav-link #{current_page?(plays_path) ? 'active' : '' }" %>
      </li>
    </ul>
    <ul class="navbar-nav">
      <% if @current_user.present? %>
        <li class="nav-item d-flex align-items-center <%= current_page?(user_path(@current_user.id)) ? 'bg-secondary' : '' %>">
          <%= link_to 'View Profile', user_path(@current_user.id), class: "nav-link #{current_page?(user_path(@current_user.id)) ? 'active' : '' }" %>
        </li>
        <li class="nav-item d-flex align-items-center">
          <%= link_to 'Log Out', log_out_path, data: { turbo_method: :delete }, class: "nav-link" %>
        </li>
      <% else %>  
        <li class="nav-item d-flex align-items-center <%= current_page?(sign_up_path) ? 'bg-secondary' : '' %>">
          <%= link_to 'Sign Up', sign_up_path, class: "nav-link #{current_page?(sign_up_path) ? 'active' : '' }" %>
        </li>
        <li class="nav-item d-flex align-items-center <%= current_page?(log_in_path) ? 'bg-secondary' : '' %>">
          <%= link_to 'Log In', log_in_path, class: "nav-link #{current_page?(log_in_path) ? 'active' : '' }" %>
        </li>
      <% end %>  
    </ul>
  </nav>
</header>